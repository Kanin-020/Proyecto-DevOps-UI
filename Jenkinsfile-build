pipeline {
  agent any
  stages {
    stage('Clonar repositorio') {
      steps {
          git branch: 'develop', url: 'https://github.com/Kanin-020/Proyecto-DevOps-UI.git'
        }
      }
    stage('Instalar dependencias') {
      steps {
        powershell 'npm install'
      }
    }
    stage('Ejecutar pruebas') {
      steps {
        powershell 'npm test' 
      }
    }
    stage('Detener contenedores') {
      steps {
        powershell(
        $containers = docker ps -q --filter 'publish=4200'
        if ($containers) {
          docker stop $containers
        } else {
          echo(message: 'No se encontraron contenedores en el puerto 4200.')  
        })
      }
    }
    stage('Desplegar') {
      steps {
        build job: 'Proyecto-Final-Devops-Angular-Despliegue', propagate: false
      }
    }
  }
}
